<mvc:View
  height="100%"
  controllerName="controller.Main"
   xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns="sap.m">
  <Page
    showHeader="false"
    enableScrolling="false" >
	<tnt:ToolHeader>
	 <Image src="images/giphy.gif" width="6%"/>
        <Button icon="sap-icon://menu2" type="Transparent">
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
        </Button>
        <ToolbarSpacer />
        <core:Icon src="sap-icon://travel-itinerary">
        </core:Icon>
        <Text text="Student Management System" wrapping="false">
            <layoutData>
                <OverflowToolbarLayoutData priority="Disappear" />
            </layoutData>
        </Text>
        <ToolbarSpacer />
        <Button text="Admin" type="Transparent" press="handleUserNamePress">
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
        </Button>
    </tnt:ToolHeader>
	

	
			<TileContainer items = "{/all}"
		>
		
      
	  
	  	
      <StandardTile class="sapMTile"
				icon="sap-icon://create"
				number=""
				numberUnit="case"
				title="STATISTICS"
				info=""
				infoState="Success"
				
				backgroundImage="images/law.png"
				press="handleCase"

				/>
			<StandardTile 
				icon="sap-icon://create"
				number="{mod1>/total}"
				numberUnit="CLIENTS"
				title="ADD STUDENT"
				info="{mod2>/total} clients added"
				infoState="Success"
				
				backgroundImage="images/law.png"
				press="handleClients"

				/>
				<StandardTile
				icon="sap-icon://loan"
				number="{mod4>/expect}"
				numberUnit="kes"
				title="TOTAL CASH EXPECTED"
				info="{mod1>/total} clients"
				infoState="Success"
				press=""
				/>
				<StandardTile
				icon="sap-icon://loan"
				number="{mod3>/paid}"
				numberUnit="kes"
				title="TOTAL PAYMENTS"
				info="3 days ago"
				infoState="Warning"
				press="handleBalances"
				/>
				<StandardTile
				icon="sap-icon://monitor-payments"
				number="{mod5>/balance}"
				numberUnit="kes"
				title="BALANCES"
				info=""
				infoState="Warning"
				press="handleBalances"

				/>
				<StandardTile
				icon="sap-icon://collections-insight"
				number="9"
				numberUnit="students"
				title="ZERO PAYMENT"
				info=""
				infoState="Error"
				press="handleBalances"

				/>
				<StandardTile
				icon="sap-icon://collaborate"
				number="22"
				numberUnit=""
				title="MALE STUDENTS"
				info=""
				infoState="Success"
				press="handleBalances"

				/>
				<StandardTile
				icon="sap-icon://manager"
				number="44"
				numberUnit=""
				title="FEMALE STUDENTS"
				info="new admitted"
				infoState=""
				press="handleBalances"

				/>
				<StandardTile
				icon="sap-icon://per-diem"
				number=""
				numberUnit=""
				title="EXAMS"
				info="4 hours ago"
				infoState="Success"
				press="handleBalances"

				/>
				<StandardTile
				icon="sap-icon://wrench"
				number=""
				numberUnit="Important"
				title="PERFORMANCE"
				info=""
				infoState=""
				press="handleBalances"

				/>
				 
	  <StandardTile
				icon="sap-icon://manager"
				number="44"
				numberUnit=""
				title="TEACHERS"
				info=""
				infoState=""
				press="handleBalances"

				/>
				<StandardTile
				icon="sap-icon://per-diem"
				number="11"
				numberUnit=""
				title="EXPELLED STUDENTS"
				info="1 student(s) expelled today"
				infoState="Critical"
				press="handleBalances"

				/>
				<StandardTile
				icon="sap-icon://wrench"
				number=""
				numberUnit="Important"
				title="EXTRAS"
				info=""
				infoState=""
				press="handleBalances"

				/>
	
	 
      
	  
				
		</TileContainer>
	
	
    
    <footer>
      <Toolbar>
        <ToolbarSpacer/>
          <Button text="Edit" press="handleEditPress" />
          <Button text="Busy state" press="handleBusyPress" />
        <ToolbarSpacer/>
      </Toolbar>
    </footer>
  </Page>
</mvc:View>
